<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/doc_blue">
        <ImageView
            android:id="@+id/back_circle"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/chat_common_base_header_back_btn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:text="@string/circle_scriptt"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"/>
    <TextView
        android:id="@+id/send_circle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/status_send"
        android:textColor="@color/white"
        android:textSize="20sp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:background="@drawable/bg_layout_shape">
    <EditText
        android:layout_gravity="start"
        android:id="@+id/circle_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textCursorDrawable="@null"
        android:background="@color/white"
        />
        </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/select_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/status_addImage"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/blue_corners"/>
<GridView
    android:id="@+id/img_grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:horizontalSpacing="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:verticalSpacing="6dp">

</GridView>
    </LinearLayout>
</LinearLayout>