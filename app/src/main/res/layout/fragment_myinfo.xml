<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/proper_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/me_entry_style">


        <RelativeLayout
            android:id="@+id/edit_avatar"
            style="@style/me_top_entry"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <LinearLayout
                android:id="@+id/my_photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/my_doctor"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/proper_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/photo_entry"
                android:layout_toLeftOf="@+id/photo_entry"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                >
                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_photo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/chat_base_color_text_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/photo_entry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/setting_arrow"
                    />
            </LinearLayout>
        </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:id="@+id/edit_name"
                style="@style/me_middle_entry"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="18sp"
                        android:textColor="@color/chat_base_color_text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/nick_entry"
                    android:layout_toLeftOf="@+id/nick_entry"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nick_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/setting_arrow"/>
                </LinearLayout>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:id="@+id/edit_phone"
                style="@style/me_bt_entry"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_phone"
                        android:textSize="18sp"
                        android:textColor="@color/chat_base_color_text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/phone_entry"
                    android:layout_toLeftOf="@+id/phone_entry"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/phone_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/setting_arrow"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/me_entry_style">
            <RelativeLayout
                android:id="@+id/edit_sex"
                style="@style/me_top_entry"
                android:layout_width="match_parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_sex"
                        android:textSize="18sp"
                        android:textColor="@color/chat_base_color_text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/sex_entry"
                    android:layout_toLeftOf="@+id/sex_entry"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/user_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sex_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/setting_arrow"/>
                </LinearLayout>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:id="@+id/edit_age"
                style="@style/me_middle_entry"
                android:layout_width="match_parent"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_age"
                        android:textSize="18sp"
                        android:textColor="@color/chat_base_color_text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/age_entry"
                    android:layout_toLeftOf="@+id/age_entry"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/age_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/setting_arrow"/>
                </LinearLayout>
            </RelativeLayout>
            <View style="@style/bg_line"/>
            <RelativeLayout
                android:id="@+id/edit_career"
                style="@style/me_bt_entry"
                android:layout_width="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_occuption"
                        android:textSize="18sp"
                        android:textColor="@color/chat_base_color_text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toStartOf="@+id/career_entry"
                    android:layout_toLeftOf="@+id/career_entry"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:id="@+id/user_career"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_nickname"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/career_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/setting_arrow"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>